---
const props = Astro.props;
---

<a {...props} target="_blank" rel="noopener noreferrer">
  <slot />
</a>
<span></span>

<style>
  a:link {
    color: hsla(var(--c-primary-h), var(--c-primary-s), var(--c-primary-l), var(--c-primary-a));
    text-decoration: underline;
  }

  a[target='_blank'] + span {
    display: inline-block;
    position: relative;
    margin-right: 0.2em;
    width: 1em;
    height: 1em;
  }

  a[target='_blank'] + span::after {
    position: absolute;
    right: 0;
    bottom: -2px;
    background: url(/images/icon/link.svg) no-repeat center center / contain;
    width: 1em;
    height: 1em;
    content: '';
  }

  a p {
    margin: 0;
  }
</style>
